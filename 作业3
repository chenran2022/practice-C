int main()
{
	int n = 0;
	while (~scanf("%d", &n))
	{
		int row = 0;
		int col = 0;
		for (row = 0; row < n; row++)
		{
			for (col = 0; col < n; col++)
			{
				if (col==0||row==n-1||row==col)
					printf("* ");
				else
					printf("  ");
			}
			printf("\n");
		}
	}
	return 0;
}
